<h2 class="page-header">Search Authors</h2>
<form action="/books" method="get">
  <div class="form-row">
    <div class="form-item">
      <label for="">Title</label>
      <input type="text" name="title" value="<%= searchOptions.title %> " />
    </div>
  </div>
  
  <div class="form-row">
    <div class="form-item">
      <label for="">Published After</label>
      <input type="date" name="publishedAfter" value="" />
    </div>
    <div class="form-item">
      <label for="">Published Before</label>
      <input type="date" name="publishedBefore" value="" />
    </div>
  </div>
  
<div class="form-row form-row-end">
  <button class="btn btn-primary" type="submit">Search</button>
</div>
  
</form>
<br />
<div>
  <% books.forEach(book => { %>
  <a href="/books/<%= book.id %> ">
    <img height="150" width="100" src="<%= book.coverImagePath %> " alt="" />
  </a>
  <% }) %>
</div>
